USE GRAPH @graph

BEGIN
    CREATE LOADING JOB load_xgraph FOR GRAPH @graph
    {
        DEFINE FILENAME tp2tr_infile = "../data/travelplan2trucks100.csv";
        DEFINE FILENAME tp2wo_infile = "../data/travelplan2workorders100.csv"
       
        DEFINE HEADER tp2tr_header = "TravelPlan", "Truck";
        DEFINE HEADER tp2wo_header = "TravelPlan", "WorkOrder", "Sequence";
                
        LOAD tp2wo_infile
            TO VERTEX travel_plan VALUES ($"TravelPlan", $"TravelPlan", _),
            TO EDGE tp2wo VALUES ($"TravelPlan", $"WorkOrder")
            USING USER_DEFINED_HEADER="tp2wo_header", separator=",";
            
        LOAD tp2tr_infile
            TO VERTEX travel_plan VALUES ($"TravelPlan", $"TravelPlan", _),
            TO EDGE tp2truck VALUES ($"TravelPlan", $"Truck")
            USING USER_DEFINED_HEADER="tp2tr_header", separator=",";           
    }
END
